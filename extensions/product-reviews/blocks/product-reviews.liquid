{% schema %}
{
  "name": "Product Reviews",
  "target": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "Enable reviews",
      "default": true
    }
  ]
}
{% endschema %}

{% if section.settings.enable %}
  <div
    id="app-reviews-root"
    data-product-id="{{ product.id }}"
    data-shop="{{ shop.permanent_domain }}">
  </div>

  <script src="{{ 'reviews.js' | asset_url }}" defer></script>
{% endif %}
