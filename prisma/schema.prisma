// Keep your existing generator and datasource
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

// ADD THIS: The Review Model
model Review {
  id           String   @id @default(uuid())
  shop         String
  productId    String
  productName  String?
  productImage String?
  rating       Int
  title        String?
  comment      String
  author       String
  email        String?
  status       String   @default("PENDING")
  createdAt    DateTime @default(now())
}

